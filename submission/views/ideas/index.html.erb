<div class="row m-3">
  <% @ideas.each do |idea|%>
  <div class="my-3 col-6 col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to idea.title, idea, class:"stretched-link text-decoration-none"%>
        </h4>
        <p class="card-text"><%=idea.body%></p>
      </div>
    </div>
  </div>
  <% end %>
</div>