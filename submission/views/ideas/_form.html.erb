<%=form_with model: @idea, class:"m-3" do |form|%>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class:"form-control" %>
    </div>
  <%= form.submit class:"btn btn-outline-primary my-3"%>
<% end %>